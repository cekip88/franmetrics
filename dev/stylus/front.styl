			font-size 20px
			&.easy
				left 59px
				bottom 198px
			&.answer
				right 58px
				bottom 78px
			&.efficiency
				bottom 198px
			&.mastering
				left 50px
				bottom 78px
			&.google
				bottom 210px
				right 67px
			&.reply
				bottom 90px
				left 68px
		&-icon
			wh(64px)
			df({
				df: '.pluses-tooltip-icon'
				jus: center
				ali: center
			})
			border-radius 100%
			background-color RGB($greenDark)
