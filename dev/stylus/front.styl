		w(100%)
		p(2px 0)
		df({
			df: '.pluses-list'
		})
		flex-direction column
		row-gap 20px
		+tablet-large()
			row-gap 60px
	&-item
		df({
			df: '.pluses-item'
			ali: center
		})
		column-gap 20px
		font-family $f_bold
		position relative
		+desktop()
			font-size 20px
		&:last-child
			.pluses-item-icon:after
				content none
		+desktop()
			column-gap 30px
		&-icon
			wh(58px)
			flex-shrink 0
			df({
				df: '.pluses-item-icon'
				ali: center
				jus: center
			})
			box-shadow 0 0 10px 0 rgba(0,0,0,.1)
			border 1px solid RGB($greenDark)
			border-radius 100%
			position relative
			&:after
				af()
				wh(1px,20px)
				background-color RGB($greenDark)
				position absolute
				top 100%
				+tablet-large()
					height 60px

		&-text
			position absolute
			left 78px

::-webkit-scrollbar
	w(7px)

::-webkit-scrollbar-track
	background #f1f1f1

::-webkit-scrollbar-thumb
	background #888
	border-radius 3.5px

::-webkit-scrollbar-thumb:hover
	background #555


.faded
	+desktop()
		transition .3s ease
		transform translate3d(0px, 100px, 0) scale(1.1)
		opacity: 0