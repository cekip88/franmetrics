						li.foot-list_item
							svg.icon
								use(xlink:href="/img/sprite.svg#inst")
							span Instagram
						li.foot-list_item
							svg.icon
								use(xlink:href="/img/sprite.svg#yt")
							span YouTube
				.foot-item
					h6.foot-title
						| E-mail
					ul.foot-list_inner
						li.foot-list_item
							span mail@franmetrics.com
						li.foot-list_item
							span job@franmetrics.com
						li.foot-list_item
							span info@franmetrics.com
				.foot-item
					h6.foot-title
						| Headquarter
					ul.foot-list_inner
						li.foot-list_item
							span USA, New Jersey Office
						li.foot-list_item
							span 200 Craig Road
						li.foot-list_item
							span Manalapan NJ 07726
