		.section
			.foot-bottom
				a(href='#').foot-logo
					+img('logotype.png')
				.foot-menu
					nav.head-nav
						a(href="/features").head-btn
							span Features
						a(href="/membership").head-btn
							span Membership
						a(href="/blog").head-btn
							span Blog
						a(href="/about").head-btn
							span About
				.foot-copy
					span © FRANMETRICS, 1855 — 2024
					a(href='#')
						| Devcube
